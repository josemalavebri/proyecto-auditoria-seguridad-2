<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - front_auditoria</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/front_auditoria.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow border-bottom border-3 border-primary">
            <div class="container-fluid d-flex justify-content-between align-items-center py-3 px-4">
                <!-- Banner a la izquierda -->
                <div class="d-flex align-items-center">
                    <img src="images/banner-ug.png" alt="Banner UG" style="height: 50px; object-fit: contain;" />
                </div>

                <!-- Botones a la derecha -->
                <div class="d-flex gap-2 align-items-center">
                    <a asp-page="/Index" class="btn btn-primary rounded fw-medium px-3 py-2 text-white text-decoration-none" role="button">Auditoria</a>
                    <a asp-page="/CreadorPreguntas" class="btn btn-primary rounded fw-medium px-3 py-2 text-white text-decoration-none" role="button">Vista General</a>
                    <a asp-page="/CreadorEncuestas" class="btn btn-primary rounded fw-medium px-3 py-2 text-white text-decoration-none" role="button">Creador de Encuestas</a>
                </div>

            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - front_auditoria - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
